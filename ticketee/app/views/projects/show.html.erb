<% title(@project.name, "Projects") %>

<h1><%= @project.name %></h1>
<p><%= @project.description %></p>

<ul class="actions">
  <li>
    <% if policy(@project).update? %>
      <li><%= link_to "Edit Project",
        edit_project_path(@project), class: "edit" %></li>
    <% end %>
  </li>
  <% admins_only do %>
    <li><%= link_to "Delete Project",
      admin_project_path(@project),
      method: :delete,
      data: { confirm: "Are you sure you want to delete this project?" },
      class: "delete" %></li>
  <% end %>
</ul>

<% if policy(Ticket.new(project: @project)).create? %>
  <li><%= link_to "New Ticket", new_project_ticket_path(@project),
    class: "new" %>
  </li>
<% end %>

<div class='row'>
  <ul id='tickets'>
    <% @project.tickets.each do |ticket| %>
      <li>
        #<%= ticket.id %> -
        <%= link_to ticket.title, [@project, ticket] %>
      </li>
    <% end %>
  </ul>
</div>
