<!DOCTYPE html>
<html>
<head>
  <title>
    <% if content_for?(:title) %>
      <%= yield(:title) %>
    <% else %>
      Ticketee
    <% end %>
  </title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class='container'>
  <div class='row'>
    <h1>Ticketee</h1>
    <div class='col-md-12'>
      <% flash.each do |key, message| %>
        <div class='flash' id='<%= key %>'>
        <%= message %>
        </div>
      <% end %>
    </div>
  </div>

  <div class='row'>
    <%= yield %>
  </div>
</div>

</body>
</html>
