<h2>Sign in</h2>
<div class='col-md-4'>
  <%= form_tag :sign_in, class: 'form' do |f| %>
    <p>
      <%= label_tag :email %><br>
      <%= text_field_tag :email %>
    </p>

    <p>
      <%= label_tag :password %><br>
      <%= password_field_tag :password %>
    </p>

    <%= submit_tag "Sign in" %>
  <% end %>
</div>
